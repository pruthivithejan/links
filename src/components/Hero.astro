---
interface Props {
	slogan: {
		words: string;
		highlight: string;
	};
	githubUsername: string;
	codeRepository: string;
}

const { slogan, githubUsername, codeRepository } = Astro.props;
---

<section
	class="w-full flex flex-col items-center justify-center gap-8 md:gap-12"
>
	<!-- Description/Slogan Section -->
	<div
		class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm max-w-[1100px] w-full z-10 animate-enter px-4"
		style={`--stagger: 4`}
	>
		<p
			class="relative m-0 p-4 rounded-xl border border-[color:var(--border)] bg-[color:var(--background)] text-center md:text-left text-[color:var(--foreground)]"
			style="letter-spacing: 1px; font-family: 'InstrumentSerif-Italic', serif;"
		>
			"{slogan.words}&nbsp;
			<code
				class="font-bold"
				style="letter-spacing: 1px; font-family: 'JetBrainsMono-Regular', monospace;"
				>{slogan.highlight}</code
			>."
		</p>
		<a
			href={`https://github.com/${githubUsername}/${codeRepository}`}
			target="_blank"
			rel="noopener noreferrer"
			class="hidden md:flex items-center justify-center gap-2 font-mono"
			style="font-family: 'JetBrainsMono-Regular', monospace;"
		>
			Build Your Own
			<img
				src="/icons/github.svg"
				alt="Github Logo"
				class="imgMain w-6 h-6"
				width={24}
				height={24}
			/>
		</a>
	</div>

	<!-- Center with Avatar and Animated Conic Gradient Border -->
	<div
		class="flex justify-center items-center relative p-8 md:p-16 pb-0 animate-enter"
		style={`--stagger: 1`}
	>
		<!-- Avatar Container with Animated Border - Exactly like React version -->
		<div
			class="relative flex justify-center items-center rounded-xl overflow-hidden"
			style="
				width: 300px;
				height: 300px;
				padding: 25px 10px;
				margin-left: 16px;
				transform: translateZ(0);
				box-shadow: 0px 2px 8px -1px #0000001a;
				background: linear-gradient(to bottom right, var(--tile-start), var(--tile-end));
			"
		>
			<!-- Rotating conic gradient border (::before equivalent) -->
			<div
				class="absolute"
				style="
					width: 200%;
					height: 200%;
					background: var(--tile-border);
					animation: rotate 6s linear infinite;
					z-index: -1;
				"
			>
			</div>

			<!-- Inner gradient background (::after equivalent) -->
			<div
				class="absolute rounded-xl"
				style="
					inset: 0;
					padding: 1px;
					background: linear-gradient(to bottom right, var(--tile-start), var(--tile-end));
					background-clip: content-box;
					z-index: -1;
				"
			>
			</div>

			<!-- Avatar Image -->
			<img
				src={`https://avatars.githubusercontent.com/${githubUsername}`}
				alt="Avatar"
				width={280}
				height={280}
				class="rounded-[7px] w-[280px] h-[280px] object-cover relative z-10"
			/>
		</div>
	</div>
</section>
